{
    "extends":"airbnb",
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true, 
            "spread": true
        }
    },
    "rules": {
        "semi": 2,
        "annoying-rule-we-want-disabled" : 0
    }
}
